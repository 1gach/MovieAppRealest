<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="317dp"
        android:layout_height="27dp"
        android:layout_marginTop="42dp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:text="What do you want to watch?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        />


    <SearchView
        android:id="@+id/search_bar"
        style="@style/CustomSearchViewStyle"
        android:layout_width="327dp"
        android:layout_height="47dp"
        app:iconifiedByDefault="false"
        android:background="@drawable/searchview_background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:queryHint="Search"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="21dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="30.18dp"
        android:paddingEnd="30.18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/back"
        app:tabTextColor="@color/white"
        app:tabIndicatorColor="@color/searchBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf = "@id/recycler"
        android:layout_marginTop="24dp"
        >

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now playing"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top rated"
            />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/closeSearchBtn"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@color/back"
        android:src="@drawable/back"
        android:visibility="gone"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="-25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/search_bar"
        app:layout_constraintTop_toTopOf="@id/search_bar" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/back"
        app:layout_constraintBottom_toBottomOf="@+id/viewPager"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        android:visibility="gone"
        />



</androidx.constraintlayout.widget.ConstraintLayout>