<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="307dp"
    android:layout_height="wrap_content"
    android:background="@color/back"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/posterCard"
        android:layout_width="95dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/back"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/watchPoster"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="spiderman"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/posterCard"
        app:layout_constraintTop_toTopOf="@id/posterCard" />

    <TextView
        android:id="@+id/star"
        android:layout_width="18dp"
        android:layout_height="15dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/star_icon"
       app:layout_constraintTop_toTopOf="@id/star_icon"
        app:layout_constraintStart_toEndOf="@id/star_icon"
        android:layout_marginStart="4dp"
        android:textColor="@color/orange"
        />
    <ImageView
        android:id="@+id/star_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintStart_toEndOf="@id/posterCard"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/star"/>


    <ImageView
        android:id="@+id/ticket_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ticket"
        app:layout_constraintStart_toEndOf="@id/posterCard"
        app:layout_constraintTop_toBottomOf="@id/star" />


    <TextView
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Action"
        android:layout_marginStart="4dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ticket_icon"
        app:layout_constraintStart_toEndOf="@+id/ticket_icon"
        app:layout_constraintTop_toBottomOf="@id/star" />

    <ImageView
        android:id="@+id/calendar_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/calendar_icon"
        app:layout_constraintStart_toEndOf="@id/posterCard"
        app:layout_constraintTop_toBottomOf="@id/ticket_icon" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="2019"
        android:layout_marginStart="4dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_icon"
        app:layout_constraintStart_toEndOf="@+id/calendar_icon"
        app:layout_constraintTop_toBottomOf="@id/ticket_icon" />


    <ImageView
        android:id="@+id/clock_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/clock"
        app:layout_constraintStart_toEndOf="@id/posterCard"
        app:layout_constraintTop_toBottomOf="@id/calendar_icon" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="139 minutes"
        android:layout_marginStart="4dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/clock_icon"
        app:layout_constraintStart_toEndOf="@+id/clock_icon"
        app:layout_constraintTop_toBottomOf="@id/calendar_icon"
        />




</androidx.constraintlayout.widget.ConstraintLayout>